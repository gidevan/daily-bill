<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ShopDao">
    <select id="findById" resultType="shop">
        select id, name, created, updated from shop where id = #{id}
    </select>

    <select id="findAll" resultType="shop">
        select id, name, created, updated from shop
    </select>

    <insert id="insert" parameterType="java.util.Map">
        <selectKey keyProperty="id" keyColumn="id" order="AFTER" resultType="long">
            select currval('shop_seq')
        </selectKey>
        insert into shop (id, name, created)
        values(nextval('shop_seq'), #{name}, #{created})
    </insert>

    <update id="update" parameterType="java.util.Map">
        update shop
            set name = #{name}
            set updated = now()
        where id = #{id}
    </update>
    <delete id="delete" parameterType="long">
        delete from shop where id = #{id}
    </delete>
</mapper>
